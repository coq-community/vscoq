{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "out",
    "tsBuildInfoFile": "out/tsconfig.tsBuildInfoFile",
    "rootDir": "src",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "composite": true,
    "allowUnreachableCode": false,
    "noImplicitThis": true,
  },
  "include": ["src"],
  "exclude": ["test"]
}
